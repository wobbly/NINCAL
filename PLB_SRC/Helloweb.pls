///////////////////////////////////////////////////////////////////////////////
// helloweb.pls: a simple CGI program test
///////////////////////////////////////////////////////////////////////////////
crlf    init    0x0D,0x0A
///////////////////////////////////////////////////////////////////////////////
ini      Dim       600
ENTRY  Init      "PLB_PATH"

start
 
.    Clock    ini,entry
    // send the default HTTP headers to the webserver
    stream *stdout,"HTTP 1.1/200 OK",crlf
   stream *stdout,"Content-type: text/html",crlf,CRLF
 
    // send our HTML response to the webserver
    stream *stdout,"<h1>Hello, web!</h1>",ini
    stop
///////////////////////////////////////////////////////////////////////////////
